<div class="background_panel" style="color: white;height: 900px;">
    <h3 style="text-align: center;">{{Nombre}}</h3>
    <hr style="width:100%">
    <div class="newrow" style="width: 98%;margin:auto;justify-content:space-evenly">
        <div class="column" style="width: 20%;">
            <img src="/img/icons/manual_icono.png" alt="" class="icon">
               <select name="manuales" id="manuales" style="width: 85%;">
                     &nbsp<option>Manuales</option>
                     {{#each manuals}}
                        &nbsp<option disabled>{{manual}}</option>
                     {{/each}}
                </select>
        </div>
        <div class="column"style="width: 30%;">
             &nbsp<img src="/img/icons/juego_icono.png" alt="" class="icon">&nbsp{{modulo}}
        </div>
        <div class="column"style="width: 10%;">
             &nbsp<img src="/img/icons/dias_icono.png" alt="" class="icon">&nbsp{{dias}}/7
        </div>
        <div class="column"style="width: 20%;">
              &nbsp<img src="/img/icons/reloj_icono.png" alt="" class="icon">&nbsp{{hora_inicio}} &nbsp{{hora_final}}
        </div>
         <div class="column"style="width: 20%;">
              &nbsp<img src="/img/icons/zona_horaria.png" alt="" class="icon">&nbsp{{zona_horaria}}
        </div>
    </div>
    <hr style="width:100%">
    <br>
    
    <div class="newrow" style="width: 98%;margin:auto;justify-content:space-evenly">
        <div class="column"style="width: 5%;">
              &nbsp<img src="/img/icons/nombre_icono.png" alt="" class="icon">
        </div>
        <div class="column"style="width: 45%;text-align:left;">
            {{#if descr}}
              &nbsp{{descr}}
            {{else}}
                Este grupo no tiene descripción
            {{/if}}
        </div>
        <div class="column"style="width: 5%;">
              &nbsp<img src="/img/icons/libro_icono.png" alt="" class="icon">
        </div>
        <div class="column"style="width: 45%;text-align:left;">
            {{#if rules}}
              &nbsp{{rules}}
            {{else}}
                No hay reglas especificas
            {{/if}}
        </div>
    </div>
    <br>
    {{#if dm}}
    <form action="../../foro/crear_foro" method="POST" tyle="witdh:98%">
        <div class="newrow" style="width: 100%;margin:auto;color:white">
            
            <div class="column" style="width: 50%;">
                <div class="newrow">
                    <div class="form-group">
                           &nbsp;Tema &nbsp; <input type="text" name="tema"  placeholder="Máximo 50 Carácteres" size="50" style="width:70%" autofocus required>
                        </div>
                </div>
                <br>
                <div class="newrow" style="text-align: center;style;width:100%">
                    <button class="c_forum_button" name="grupo_id" value="{{grupo_id}}">
                        <img src="/img/icons/crear_foro.png" alt="" class="icon">&nbsp; CREAR NUEVO FORO
                    </button>
                </div>
            </div>
            <div class="column" style="style=width: 50%;">
                <div class="column" style="width:auto;">
                Descripción &nbsp;           
                </div>
                <div class="column" style="width:auto">
                    <textarea name="descr" id="" cols="60" rows="5" style="width: 100%;overflow:auto" placeholder="Máximo 100 carácteres" required></textarea>
                </div>
            </div>
        </div>
    </form>
    {{/if}}
    <hr style="width:100%">
    {{#if miembro}}


    <br>
    <div style="width: 98%;margin:auto;height:550px;background-color:#2e2e2e;">
        <div class="column" style="width:70%;overflow:auto">


            <div class="newrow" style="width: 98%;margin-left:1%">
                {{#each foros}}
                <div class="newrow" style="width: 100%;background-color:#3b3b3b;margin-top:8px">
                    <form action="../../foro/ver_foro" method="GET">
                    <button name="id" class="forum_button" value="{{foro_id}}" style="width: 100%;">
                    <div class="column" style="width: 12%;margin-top:2px;">
                            <img src="/img/icons/foro_icono.png" alt="" class="forum_icon">
                    </div>
                    <div class="column" style="width: 30%;margin-top:2px;">
                            <div class="newrow">
                                &nbsp;TITULO: {{nombre}}
                            </div>
                            <div class="newrow" style="margin-top:18px;width:100%;text-align:left">
                                <div class="column"style="50%">
                               &nbsp;<img src="/img/icons/foro_mensajes.png" alt="" class="icon">
                               &nbsp;{{msjs.[0].mensajes}}
                                </div>
                                <div class="column" style="text-align:center">
                                &nbsp;<img src="/img/icons/reloj_icono.png" alt="" class="icon">
                                {{ultimo.[0].fecha}}
                                </div>
                            </div>
                    </div>
                    <div class="column" style="width: 20%;margin-top:2px;padding-top:20px">
                        DESCRIPCIÓN:&nbsp
                    </div>
                    <div class="column" style="width: 30%;margin-top:2px;text-align:left;margin-left:3%">
                        {{descr}}
                    </div>
                    </button>
                    </form>
                    </div>
                {{/each}}
                </div>
            </div>
            
            <div class="column"style="width:28%;margin:auto;margin-top:8px;margin-bottom:8px;margin-left:5px">
                <div class="newrow" style="width: 100%;">
                    <h5 class="friends_title" style="margin:auto;padding-bottom:15px;">INTEGRANTES ({{miembros_actuales}})</h5>
                </div>
                <br>
                <div class="members_panel">
                {{#each integrante}}
                    <form action="../../usuarios/ver_perfil" method="GET" style="width:100%;margin:auto;text-align:center">
                        <button name="id" class="memberButton" value="{{usuario_id}}">
                            <div class="newrow" style="width: 100%;">
                                <h5>{{miembro_login}}</h5>
                            </div>
                            <div class="newrow" style="width: 100%;">
                                {{#loop 1 rating 1 }}
                                    <div>{{this}}</div>
                                {{/loop}}
                            </div>
                        </button>
                    </form>
               {{/each}}
               </div>
            {{#if dm}}
            <form action="/grupo/delete_group" method="POST" style="width:100%;text-align:center">
                 <button name="id_button" class="delete_button"  value="{{grupo_id}}">[X] Eliminar Grupo</button>
            </form>
            {{else}}
                <form action="/grupo/exit_group" method="POST" style="width:100%;text-align:center">
                 <button name="id_button" class="exit_button"  value="{{grupo_id}}">SALIRSE DEL GRUPO</button>
            </form>
            {{/if}}
            <br>
            <br>
            <br>
            </div>
        </div>
    </div>
    {{else}}
        <form action="join" method="POST" style="height:60%;">
        <div class="graypanel" style="width: 98%;margin:auto;height:100%;background-color:#2e2e2e;padding-top:10%; text-align:center;">
            <h3>INGRESA AL GRUPO PARA TENER ACCESO A LOS FOROS</h3> 
                <div class="form-group">
                    <br>
                <button name="index" class="btn btn-success" style="width: 30%; margin-top:20px;" value="{{grupo_id}}">INGRESAR AL GRUPO</button>
                </div>
        </div>
        </form>
    {{/if}}

</div>