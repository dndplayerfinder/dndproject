<div>
<div class="search_panel" style="height:120px">
    <form action="/grupo/buscar" method="POST">
    <div class="row" style="width: 100%;margin:auto">
    <div class="coulmn" style="width:60%">
        <div class="newrow" style="width: 100%;">
                <h4 style="padding-left:10%;">FILTROS</h4>
                <hr style="width: 100%;">
            </div>
        <div class="newrow" style="width: 100%;">
            <div class="column" style="width: 25%;text-align:center">
                &nbsp;&nbsp;<img src="/img/icons/manual_icono.png" alt="" class="icon">&nbspMANUALES
            </div>
            <div class="column" style="width: 65%;">
                <div class="multiselect"style="width: 100%;">
                    <div class="selectBox" onclick="showCheckboxes()">
                        <select>
                            <option style="background-color: #1b2029;z-index:9">Manuales</option>
                        </select>
                        <div class="overSelect"></div>
                    </div>
                    <div id="checkboxes" style="height:80px">
                        <label for="0"}>
                                <input type="checkbox" id="0" onclick="checkboxes()" name="todos"/>Todos</label>
                        {{#each manuals}}
                            <label for={{manual_id}}>
                                <input type="checkbox" id={{manual_id}} name="manual"  value={{manual_id}} />{{manual}}</label>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="column" style="width:40%">
        <div class="newrow" style="padding-top:15px;text-align:center">
            BUSCAR POR NOMBRE DE GRUPO
            <div class="form-group" style="text-align:center;margin:auto;width:90%;display:flex; margin-left:15%">
                    <input type="text" name="nombre"  placeholder="Buscar" size="50" style="width:80%;;" autofocus>
                    <button style="margin-left:-40px;nackground-color:gray;"><img src="/img/icons/buscar_icono.png" alt="" class="icon"></button>
                    </input>
            </div>
        </div>
    </div>
    </div>
    </div>
    <div class="filtros">
        <div class="newrow" id="filtros" style="text-align: center;width:100%">
            FILTROS AVANZADOS
        </div>
        <div class="newrow" style="text-align: center;width:100%">
             <span onclick="openTab('b1')" class="collapsible" id="collapsible">
                <img src="/img/icons/mostrar_mas.png" alt="" class="icon">
            </span>
            <div id="b1" class="content" style="display:none;">
                
                <div class="newrow" style="width:100%">
                    <div class="column">
                        <div class="newrow" style="padding-left: 8%;">
                            <img src="img/icons/jugadores_icono.png" alt="" class="icon">&nbsp;MAX. INTEGRANTES 
                            <input type="number" min="3" max="15" style="height:30px;" name="num_integrantes">
                        </div>
                        <div class="newrow" style="padding-left: 8%;margin-top:10px;">
                            <img src="img/icons/juego_icono.png" alt="" class="icon">&nbsp;CAMPAÑA&nbsp;
                            <select name="mods" id="mods" style="font:bold;width:20%;background-color: white;color:black;font-weight:bold;position:absolute" onmousedown="if(this.options.length>4){this.size=4;}"  onchange='this.size=0;' onblur="this.size=0;">
                                <option value="0" style="postion:relative">Elegir Campaña</option> 
                                {{#each mods}}
                                    <option value={{modulo_id}} style="postion:relative">{{modulo}}</option> 
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="column">
                        <div class="newrow" style="width: 100%;text-align:left;padding-left:25%">
                            <img src="img/icons/perfil_icono.png" alt="" class="icon">&nbsp; AMIGOS EN EL GRUPO&nbsp; <input type="checkbox" name="friends">
                        </div>
                    </div>
                </div>
                FILTROS AVANZADOS
                <br>
            <span onclick="this.parentElement.style.display='none';
    document.getElementById('collapsible').style.display = 'inline';
    document.getElementById('filtros').style.display='block';" class="closebtn"><img src="img/icons/mostrar_mas.png" alt="" class="icon"></span>
        </div>
        </div>
        </form>
    <div class="group_title">
        <h4>GRUPOS</h4> 
    </div>
<div style="height: 700px;margin:auto;overflow:auto;width:100%;">
    
    
    <table style="color:white;background-color:#212121;width:100%;z-index:4" >
        {{#each grupos}}

        <tr style="border-top: 2px solid white;border-bottom: 2px solid white;z-index:4">
            <th>
            <h5>{{Nombre}}</h5>
            </th>
            <th>
            </th>
            <th>
                
            </th>
            <td>
                <form action="/grupo/ver/" method="GET"><button name="id" class="table_button" value="{{grupo_id}}">Ver/Entrar</button></form>
            </td>
        </tr>
        <tr>
            <td>
                &nbsp<img src="/img/icons/corona_icono.png" alt="" class="icon">&nbsp{{owner}}
            </td>
            <td>
                &nbsp<img src="/img/icons/estado_icono.png" alt="" class="icon">&nbsp
                {{#if activo}}
                    Abierto
                    {{else}}
                    Cerrado
