                &nbsp<img src="/img/icons/reloj_icono.png" alt="" class="icon">&nbsp{{hora_inicio}}&nbsp{{hora_final}}
            </td>
            <tr>
            <tr>
                <td>
                &nbsp<img src="/img/icons/manual_icono.png" alt="" class="icon">
                    <select name="manuales" id="manuales" style="width: 40%;">
                        &nbsp<option>Manual del Jugador</option>
                        {{#each manuales}}
                            &nbsp<option disabled>{{manual}}</option>
                        {{/each}}
                    </select>
                </td>
                <td>
                    &nbsp<img src="/img/icons/jugadores_icono.png" alt="" class="icon">&nbsp{{miembros_actuales}}
                </td>
                <td>
                    &nbsp<img src="/img/icons/perfil_icono.png" alt="" class="icon">&nbsp{{amigos}}
                </td>
                <td>
                    &nbsp<img src="/img/icons/zona_horaria.png" alt="" class="icon">&nbsp{{zona_horaria}}
                </td>
            </tr>
            <tr>
                <td>
                &nbsp<img src="/img/icons/juego_icono.png" alt="" class="icon">&nbsp{{modulo}}
                </td>
            </tr>
        </tr>
        
        {{/each}}
    </table>
    
</div>
