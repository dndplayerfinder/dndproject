
<body style="background-image: url(/img/fondo_iniciosesion.png); background-position:top">
<div class="panel">
    
    <div style="height: 100%;">
        <div style="height: 100%;">
            <div class="card">
                </br>
                <img src="/img/header_icono.png" alt="" class="login_header">
                <div class="tab">
                    <button class="tablinks active" onclick="openPanel(event,'Ingresar')">INGRESAR</button>
                    <button class="tablinks" onclick="openPanel(event,'Registro')">CREAR CUENTA</button>
                </div>
                <div id="Registro" class="tabcontent" style="display: none;">
                    <div class="card-body">
                        <form action="/registro" method="POST" class="sign_in_panel">
                        <div class="row">
                            <div class="column">
                                <div class="form-group">
                                    <h5>CORREO</h5>
                                    <input type="text" name="correo" class="textbox" placeholder="Correo" autofocus required>
                                </div>
                            </div>
                            <div class="column">
                                <div class="form-group">
                                    <h5>USUARIO</h5>
                                    <input type="text" name="usuario" class="textbox" placeholder="Nombre de usuario" autofocus required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                        <div class="column">
                            <div class="form-group">
                                <h5>CONTRASEÑA</h5>
                            <input type="password" id="pwd" name="password" class="textbox" placeholder="Contraseña"
                             pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                             title="La contraseña debe contener al menos 8 caracteres, una mayuscúla, una minuscula y una mayúsucla y opcionalmente un caracter especial" 
                             onchange="check_pass()"
                             autofocus required>
                            </div>
                        </div>
                        <div class="column">
                            <div class="form-group">
                                <h5>CONFIRMAR CONTRASEÑA</h5>
                            <input type="password" id="c_pwd" name="password_confirm" class="textbox" placeholder="Contraseña" 
                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                            title="La contraseña debe contener al menos 8 caracteres, una mayuscúla, una minuscula y una mayúsucla y opcionalmente un caracter especial" 
                            onchange="check_pass()"
                            autofocus required>
                            </div>
                        </div>
                        </div>
                        </br>
                        </br>
                        <div class="form-group">
                            <button class="btn btn-success " id="r_confirm" style="width: 20%;" disabled>CREAR</button>
                        </div>
                        </form>
                    </div>
                </div>
                <div id="Ingresar" class="tabcontent" >
                    <form action="/login" method="POST" class="login_panel">
                        <h5>USUARIO</h5>
                        <div class="form-group">
                            <input type="text" name="login_login" class="textbox_login" placeholder="Nombre de usuario" autofocus required>
                        </div>
                        <h5>CONTRASEÑA</h5>
                        <div class="form-group">
                            <input type="password" name="login_pwd" class="textbox_login" placeholder="Contraseña"  autofocus required>
                        </div>
                       
                        <div class="form-group">
                            <button class="btn btn-success" style="width: 20%; margin-top:20px;">ACCEDER</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    function openPanel(evt,panel){
        // Declare all variables
        var i, tabcontent, tablinks;

        // Get all elements with class="tabcontent" and hide them
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }

        // Get all elements with class="tablinks" and remove the class "active"
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }

        // Show the current tab, and add an "active" class to the button that opened the tab
        document.getElementById(panel).style.display = "block";
        evt.currentTarget.className += " active"; 
    }

    function check_pass(){
        if(document.getElementById("pwd").value==document.getElementById("c_pwd").value){
            document.getElementById("r_confirm").disabled = false;
        }
        else{
            document.getElementById("r_confirm").disabled = false;
        }
    }
</script>